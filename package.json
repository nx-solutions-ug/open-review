{
  "name": "open-review",
  "version": "1.0.0",
  "description": "AI-powered code review GitHub Action with inline comments",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist --license licenses.txt",
    "build:watch": "ncc build src/index.ts -o dist --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "package": "npm run build && git add dist",
    "prepare": "npm run build",
    "test:local": "ts-node tests/manual-test.ts",
    "test:local:security": "REVIEW_MODE=security ts-node tests/manual-test.ts",
    "test:local:performance": "REVIEW_MODE=performance ts-node tests/manual-test.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nx-solutions-ug/open-review.git"
  },
  "keywords": [
    "github-action",
    "code-review",
    "ai",
    "llm",
    "openai",
    "pull-request",
    "automation"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "openai": "^4.28.0",
    "minimatch": "^9.0.9"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "@vercel/ncc": "^0.38.1",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20"
  }
}
